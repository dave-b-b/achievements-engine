{
  "name": "achievements-engine",
  "version": "1.1.1",
  "description": "Framework-agnostic achievement system with event-based architecture. Core engine for gamification features.",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "docs:dev": "cd docs && npm run start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve"
  },
  "keywords": [
    "achievements",
    "gamification",
    "events",
    "engine",
    "framework-agnostic",
    "game",
    "progress",
    "tracking"
  ],
  "author": "Dave B",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/jest": "^29.5.2",
    "fake-indexeddb": "^6.2.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.2.0",
    "rollup": "^3.25.1",
    "rollup-plugin-dts": "^5.3.0",
    "ts-jest": "^29.3.2",
    "tslib": "^2.8.1",
    "typescript": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dave-b-b/achievements-engine.git"
  },
  "bugs": {
    "url": "https://github.com/dave-b-b/achievements-engine/issues"
  },
  "homepage": "https://dave-b-b.github.io/achievements-engine/"
}
